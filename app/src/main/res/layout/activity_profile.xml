<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.gargc.chatapp1.ProfileActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="false"
        android:scaleType="centerCrop"
        android:src="@drawable/defaultavatar" />

    <TextView
        android:id="@+id/profile_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="25dp"
        android:paddingLeft="120dp"
        android:text="DISPLAY NAME"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_display_name"
        android:layout_marginTop="20dp"
        android:paddingLeft="80dp"
        android:text="CURRENT USER STATUS"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profile_total_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="130dp"
        android:text="Total Friends"
        android:textColor="@android:color/white"
        android:layout_below="@+id/profile_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />

    <Button
        android:id="@+id/profile_send_request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="SEND FRIEND REQUEST"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_below="@+id/profile_total_friends"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/PROFILE_DECLINE_REQUEST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?attr/colorAccent"
        android:text="DECLINE FRIEND REQUEST"
        android:textColor="@android:color/white"
        android:textStyle="bold" />


</RelativeLayout>
